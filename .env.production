# Production Environment Configuration
# Copy this file to .env and update values for your production environment

# Environment
ENVIRONMENT=production
DEBUG=false

# Security (generate strong secrets for production)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Database (use connection pooling in production)
DATABASE_URL=postgresql+asyncpg://postgres:your-strong-password@db:5432/enterprise_ai_prod

# Redis (use clustered Redis in production)
REDIS_URL=redis://redis:6379

# GitHub OAuth (register your app at github.com/settings/applications/new)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret-min-40-chars

# URLs
BASE_URL=https://your-domain.com
DASHBOARD_URL=https://your-domain.com

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/api.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AWS S3 Storage (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=enterprise-ai-platform-artifacts

# Agent Settings
MAX_TOKENS_PER_EXECUTION=50000
AGENT_TIMEOUT_SECONDS=300
